{
  "name": "Homelab Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.terraform.d,target=/home/vscode/.terraform.d,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--network=host"
  ],
  "containerEnv": {
    "KUBECONFIG": "${containerWorkspaceFolder}/metal/kubeconfig.yaml"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        "yzhang.markdown-all-in-one",
        "mads-hartmann.bash-ide-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terraform.languageServer.enable": true,
        "yaml.schemas": {
          "kubernetes": "*.yaml"
        }
      }
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "pre-commit install"
}
